{
    // ***********************
    // - Editor
    // ***********************

    "editor.minimap.enabled": true,
    "editor.fontSize": 16,
    "editor.lineHeight": 26,
    "editor.fontFamily": "'Cascadia Code', 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.rulers": [
        120
    ],
    "editor.cursorSmoothCaretAnimation": true,
    "editor.hover.sticky": true,
    "editor.columnSelection": false,
    "editor.renderIndentGuides": false,
    "editor.renameOnType": true,
    // "editor.formatOnSave": true,
    // "editor.formatOnSaveMode": "modifications",
    
    // ***********************
    // - Workbench
    // ***********************
    
    "window.zoomLevel": 0,
    "window.menuBarVisibility": "default",
    // "window.titleBarStyle": "custom",
    "files.autoSave": "onWindowChange",
    // "files.associations": {
    //     ".env*": ".env",
    //     "Dockerfile_*": "Dockerfile",
    //     "Dockerfile-*": "Dockerfile",
    // },
    "workbench.editor.closeEmptyGroups": true,
    "workbench.tree.indent": 22,
    "workbench.editor.showIcons": true,
    "workbench.tips.enabled": true,
    "workbench.sideBar.location": "left",
    "workbench.colorTheme": "Cobalt2",
    // "workbench.dialogs.useSimplified": true,
    "breadcrumbs.enabled": true,
    "explorer.autoReveal": false,
    // "extensions.ignoreRecommendations": false,
    
    // Search
    "search.maintainFileSearchCache": true,
    
    // ***********************
    // - Terminal
    // ***********************
    
    "terminal.integrated.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.4,
    "terminal.integrated.showExitAlert": false,

    // ***********************
    // - For comments
    // ***********************
    
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    
    // ***********************
    // - For Git
    // ***********************

    "git.autofetch": true,
    "gitlens.mode.active": "zen",
    "gitlens.views.repositories.files.layout": "tree",
    "gitlens.views.repositories.files.compact": false,
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "explorer",
    "gitlens.views.lineHistory.location": "explorer",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    // "gitlab.instanceUrl": "https://git.javra.com",
    // "gitlab.remoteName": "origin",
    // "gitlens.codeLens.visibility": "ondemand",
    // "gitlens.codeLens.recentChange.enabled": false,
    // "gitlens.codeLens.authors.enabled": false,
    // "gitlens.currentLine.enabled": false,
    // "files.watcherExclude": {
    //     "**/.git/objects/**": true,
    //     "**/.git/subtree-cache/**": true,
    //     "**/node_modules/*/**": true
    // },

    // ***********************
    // - For Todo
    // ***********************

    "todo-tree.tree.showScanModeButton": false,
    "todo-tree.highlights.enabled": true,
    "todo-tree.general.tags": [
        "XXX",
        "TODO",
        "Todo",
        "todo",
        "TEST",
        "HACK",
        "FIXME",
        "BUG",
        "SUSON"
    ],
    
